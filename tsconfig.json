{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "masterly",
    "src/constants/AppIcons.ts",
    "src/hooks/useUpload.ts",
    "src/types/navigation.ts",
    "src/utils/accessibilityReporter.ts",
    "src/utils/examColors.ts",
    "src/utils/navigationRef.ts",
    "src/utils/orientationUtils.ts",
    "src/utils/responsiveUtils.ts",
    "src/utils/usePillarboxConstraints.ts"
  ]
}